    <!-- Scripts de Funcionalidad -->
    <script>
        // Control del Men√∫ M√≥vil
        function toggleMenu() {
            const menu = document.getElementById('mobile-menu');
            const icon = document.getElementById('menu-icon');
            const isOpen = menu.classList.contains('active');
            
            if (isOpen) {
                menu.classList.remove('active', 'flex');
                menu.classList.add('hidden');
                icon.classList.replace('fa-times', 'fa-bars-staggered');
            } else {
                menu.classList.add('active', 'flex');
                menu.classList.remove('hidden');
                icon.classList.replace('fa-bars-staggered', 'fa-times');
            }
        }

        // L√≥gica de Env√≠o de Formulario a WhatsApp
        document.getElementById('whatsappForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const location = document.getElementById('location').value;
            const schedule = document.getElementById('schedule').value;
            
            const phoneNumber = "542901479747";
            const message = `Hola Hu√©rfanos Fight Team! ü•ä Mi nombre es ${name}. Soy de ${location} y estoy interesado en el horario: ${schedule}. Me gustar√≠a recibir informaci√≥n para sumarme al equipo.`;
            
            const encodedMessage = encodeURIComponent(message);
            const whatsappUrl = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
            
            window.open(whatsappUrl, '_blank');
        });

        // Efecto de Sticky Navbar al Scroll
        window.addEventListener('scroll', function() {
            const nav = document.getElementById('main-nav');
            if (window.scrollY > 50) {
                nav.classList.add('py-2', 'bg-slate-950/95', 'shadow-2xl');
            } else {
                nav.classList.remove('py-2', 'bg-slate-950/95', 'shadow-2xl');
            }
        });

        // Cerrar men√∫ al hacer clic en un enlace (Mobile)
        document.querySelectorAll('#mobile-menu a').forEach(link => {
            link.addEventListener('click', () => {
                if (!document.getElementById('mobile-menu').classList.contains('hidden')) {
                    toggleMenu();
                }
            });
        });
    </script>
